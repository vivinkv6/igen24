        <!-- Content -->
        <div class="content col-md-9 table-responsive">
          <!-- Table -->
          <table class="table table-bordered caption-top">
            <%# if (users.length==0) { %>
            <h2 class="text-center text-secondary"><%= event_name %> - <%= name %></h2>
            <%# }else{ %>
            <form action="events" method="get">
              <select name="event" id="">
                <option value="codex">Codex</option>
                <option value="webcast">Webcast</option>
                <option value="photography">Photography</option>
                <option value="choreography">Choreography</option>
                <option value="crime">Crime Investigation</option>
                <option value="football">Football</option>
                <option value="gaming">Video Gaming</option>
                <option value="itquiz">IT Quiz</option>
                <option value="cipher">Crack The Cipher</option>
                <option value="reconcile">Reconcile</option>
                <option value="band">Band</option>
              </select>
              <select name="category" id="">
                <option value="spot">Spot Registration</option>
                <option value="online">Online Registration</option>
              </select>
              
              <button class="btn btn-primary">Filer</button>
            </form>
            <caption>
              List of Users
            </caption>
            <thead class="thead-dark">
              <tr>
                <th class="text-dark">SlNo.</th>
                <th class="text-dark">Chess No.</th>
                <th class="text-dark">Name</th>
                <th class="text-dark">Email</th>
                <th class="text-dark">College</th>
                <th class="text-dark">Department</th>
                <% if(event[0].dataValues.transactionid){ %>
                <th class="text-dark">TransactionID</th>
                <th class="text-dark">Payment</th>
                <% } %>
              </tr>
            </thead>

            <tbody>
              <% for( let i = 0; i < event.length; i++ ) { %>

              <tr>
                <td><%= i+1 %></td>
                <td><%= event[i].dataValues.id %></td>
                <td><%= event[i].dataValues.name %></td>
                <td><%= event[i].dataValues.email %></td>
                <td><%= event[i].dataValues.college %></td>
                <td><%= event[i].dataValues.department %></td>
                <% if(event[i].dataValues.transactionid){ %>
                <td><%= event[i].dataValues.transactionid %></td>
                <td><img src="<%= event[i].dataValues.payment %>" height="300" width="200" alt=""></td>
                <% } %>
              </tr>
              <% } %>

              <!-- Add more rows as needed -->
            </tbody>
            <%# } %>
          </table>
