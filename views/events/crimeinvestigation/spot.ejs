<!DOCTYPE html>
<html>

<head>
  <title>Crime Investigation Spot Registration</title>

  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheets/events/codex/spot.css" />
</head>

<body>
  <main style="width: 100%;">
    <div class="container" data-aos="fade-in" data-aos-delay="500" data-aos-duration="2000">
    
      <h2 class="title" >Crime Investigation Spot Registration</h2>
      <div class="row">
      <form action="spot" id="forms" method="post" style="display: flex; flex-direction: column; justify-content: space-around; width: 100%;">
        <div class="col-md-4 col-lg-6 form ">
          <div class="form-group">
            <label for="email-address">Participant 1</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email-address">Email address</label>
            <input type="email" id="email" name="email" required pattern="[^\s@]+@[^\s@]+\.[^\s@]+" />
          </div>
          <div class="form-group">
            <label for="password">Department</label>
            <input type="text" id="department" name="department" required />
          </div>
          <div class="form-group">
            <label for="email-address">College</label>
            <input type="text" id="college" name="college" required />
          </div>
          <button class="btn" id="btn" type="submit">Register</button>
        </div>
      </div>
      <div id="formContainer"></div>
      <button type="button" class="btn btn-primary" onclick="addForm()">Add Participant</button>    
      </form>
    </div>
    </div>
  </main>


  <script>
    var clickCount = 1;
    var maxClicks = 5; // Set your desired limit here

    function addForm() {
   
      if (clickCount < maxClicks) {
        clickCount++;

        var formContainer = document.getElementById("formContainer");
        var form=document.getElementById('forms');

        var newForm = document.createElement("div");
        newForm.className = "form";

        newForm.innerHTML = `
      <div class="form-group">
        <label for="email-address">Participant ${clickCount}</label>
        <input type="text" id="name${clickCount}" name="name" required />
      </div>
      <div class="form-group">
        <label for="email-address">Email address</label>
        <input type="email" id="email${clickCount}" name="email" required pattern="[^\s@]+@[^\s@]+\.[^\s@]+" />
      </div>
      <div class="form-group">
        <label for="password">Department</label>
        <input type="text" id="department${clickCount}" name="department" required />
      </div>
    `;

        form.appendChild(newForm);
      } else {
        alert("You have reached the maximum limit of clicks.");
      }
    }
  </script>
</body>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"></script>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>
</body>

</html>