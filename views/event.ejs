            <a href="<%= day1[i].pdf %>">
              <img src="<%= day1[i].image %>" class="rounded" alt="" />
            </a>
            <br />
            <div style="display: flex;justify-content: center;gap: 0.5rem;align-items: center;">
            <a href="<%= day1[i].pdf %>" data-aos="zoom-in" class="btn btn-outline-success text-light mt-3 " style="width: 25%; height: 38px; background-color: black;border: 2px solid rgb(167, 237, 17);">View</a>
            <a href="/events/<%= day1[i].name %>/registration" data-aos="zoom-in" class="btn primary mt-3">Register Now</a>
          </div>
          </center>
        </div>

