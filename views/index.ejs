    <script>
      // Function to update the countdown based on the remaining time from the backend
      let day=document.getElementById('days');
      let hour=document.getElementById('hours');
      let minute=document.getElementById('minutes');
      let second= document.getElementById('seconds');

      function updateCountdown() {
    fetch('/time')
        .then(response => response.json())
        .then(data => {
            // Update the HTML with the remaining time
          

            // Check if the remaining time is zero
            if (data.remainingDays === 0 && data.remainingHours === 0 && data.remainingMinutes === 0 && data.remainingSeconds === 0) {
             
                // Set the HTML elements to zero
            day.textContent = 0;
            hour.textContent = 0;
            minute.textContent = 0;
            second.textContent = 0;
                // Clear the interval
                clearInterval(interval);

                const start = () => {
            setTimeout(function() {
                confetti.start()
            }, 1000); // 1000 is time that after 1 second start the confetti ( 1000 = 1 sec)
        };

        //  Stop

        const stop = () => {
            setTimeout(function() {
                confetti.stop()
            }, 15000); // 5000 is time that after 5 second stop the confetti ( 5000 = 5 sec)
        };

        start();
        stop();

            }
           else if (data.remainingDays <0 && data.remainingHours < 0 && data.remainingMinutes < 0 && data.remainingSeconds < 0) {
            
             
             // Set the HTML elements to zero
            day.textContent = 0;
            hour.textContent = 0;
            minute.textContent = 0;
            second.textContent = 0;

             // Clear the interval
             clearInterval(interval);

          
             
         }
            else{
              day.textContent = data.remainingDays;
            hour.textContent = data.remainingHours;
            minute.textContent = data.remainingMinutes;
            second.textContent = data.remainingSeconds;
            }
        })
        .catch(error => console.error('Error fetching remaining time:', error));
}

const interval = setInterval(() => {
    updateCountdown();
}, 1000);


    </script>


