    <script>
      // Function to update the countdown based on the remaining time from the backend
      function updateCountdown() {
        fetch('/time')
          .then(response => response.json())
          .then(data => {
            // Update the HTML with the remaining time
            document.getElementById('days').textContent = data.remainingDays;
            document.getElementById('hours').textContent = data.remainingHours;
            document.getElementById('minutes').textContent = data.remainingMinutes;
            document.getElementById('seconds').textContent = data.remainingSeconds;
          })
          .catch(error => console.error('Error fetching remaining time:', error));
      }
    
      // Initial update
      updateCountdown();
    
      // Update every second
      setInterval(() => {
        updateCountdown();
      }, 1000);
    </script>


